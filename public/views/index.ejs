<html>
   <head>
      <link rel="icon" type="image/png" href="../assets/img/pn-logo.png">
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
   </head>
   <body>
      <div class="container" style="margin-top: 5%; width: 70%; margin-left: 20%;">
      <h3 class="text-left font-weight-normal">CLS Registration</h3>
      <div class="row" style="margin-top: 2%;">
         <table class="table table-condensed table-borderless">
            <thead>
               <th class="font-weight-bold" style="width: 15%;">Entry No</th>
               <th class="font-weight-bold" style="width: 20%;">Name</th>
               <th class="font-weight-bold">Time In</th>
               <th class="font-weight-bold">Time Out</th>
            </thead>
            <% var data = result, count = 1 %> 
            <% data.forEach(function(element){ %>
            <tr>
               <form method="POST" action="/">
                  <td><%= count %></td>
                  <td><input type="text" name="Name" style="border:none;background: transparent;" value= <%= `${element.Name}` %>></td>
                  <td name = "In"><%= element.In %></td>
                  <td id="teddy"><% if(element.Out){ %>
                     <%= element.Out %>
                     <%}else{%>
                     <button name="out" type="submit" class="btn btn-info btn-sm" style="width: 40%;" data-id= <%= `${element._id}`%>>Out</button>
                  </td>
                  <%}%> 
                  <td><button formmethod="POST" formaction="/edit"  class="btn btn-success btn-sm" style="margin-left: -70%; width: 65%;" data-id = <%= `${element._id}`%>>Edit</button></td>
                  <td><button formaction="/delete"  formmethod="POST" class="btn btn-danger btn-sm" style="margin-left: -90%; width: 50%;">Delete</button></td>
               </form>
            </tr>
            <% count++ %>
            <% });%>   
         </table>
         <form method="POST" action="/register">
            <button type="submit" class="btn btn-warning" style="margin-top: 2%;">Register New User</button>
         </form>
      </div>
      <script type="text/javascript"></script>
   </body>